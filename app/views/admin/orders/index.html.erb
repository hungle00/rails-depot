<% if notice.present? %>
  <p id="notice"><%= notice %></p>
<% end %>

<h1>Orders</h1>
We have <%= pluralize(@total_orders, "order") %>.

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Address</th>
      <th>Pay type</th>
      <th>Created At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user.username %></td>
        <td><%= order.user.email %></td>
        <td><%= order.address %></td>
        <td><%= order.pay_type %></td>
        <td><%= order.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Users', admin_users_path %>
<%= link_to 'Export to csv', admin_orders_export_path(format: :csv) %>
